{
  "name": "aliens-and-robots",
  "version": "0.1.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "hardhat test",
    "test:gas": "cross-env REPORT_GAS=true hardhat test --network hardhat",
    "start": "cd client && yarn start",
    "chain": "hardhat node --network hardhat --no-deploy",
    "deploy:oracle": "hardhat deploy --tags 'OracleWrapper'",
    "deploy": "hardhat deploy --tags 'Character,Controller'",
    "sls:d": "serverless deploy",
    "console": "hardhat console",
    "publish:kovan": "hardhat export --network kovan --export client/src/eth/kovan/deploy.json",
    "verify": "yarn verify:sourcify && yarn verify:etherscan && yarn verify:tenderly",
    "verify:etherscan": "hardhat etherscan-verify",
    "verify:sourcify": "hardhat sourcify",
    "verify:tenderly": "hardhat tenderly:verify",
    "push:tenderly": "hardhat tenderly:push",
    "build": "rollup -c",
    "sign": "hardhat run scripts/sign.js",
    "relay": "hardhat run scripts/relay.js",
    "upload": "yarn build && hardhat run scripts/upload.js",
    "clean": "hardhat clean && rimraf deployments"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.3.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.4.1",
    "@openzeppelin/contracts-upgradeable": "^4.4.1",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@tenderly/hardhat-tenderly": "^1.0.13",
    "builtin-modules": "^3.2.0",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "defender-admin-client": "^1.12.1",
    "defender-autotask-client": "^1.12.1",
    "defender-relay-client": "^1.12.1",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.8.0",
    "hardhat-deploy": "^0.9.14",
    "hardhat-deploy-ethers": "0.3.0-beta.11",
    "hardhat-deploy-tenderly": "^0.0.6",
    "hardhat-docgen": "^1.2.1",
    "hardhat-gas-reporter": "^1.0.6",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.1",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.17"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "bad-words": "^3.0.4",
    "serverless": "^3.0.0-pre.7cd71b9a",
    "serverless-bundle": "^5.2.0"
  }
}
